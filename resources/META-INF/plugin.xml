<idea-plugin version="2">
    <id>com.supaplugin</id>
    <version>1.0</version>
    <name>PackageTemplate</name>
    <vendor email="support@supaplugin.com"
            url="http://www.supaplugin.com">YourCompany
    </vendor>

    <description><![CDATA[
      Tool for create "package templates".<br>
      <em>Plugin in Beta</em>
    ]]></description>

    <change-notes><![CDATA[
      No changes.<br>
    ]]>
    </change-notes>

    <idea-version since-build="141.0"/>

    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>org.intellij.groovy</depends>
    <!--<depends>com.intellij.modules.platform</depends>-->
    <!--<depends>com.intellij.modules.vcs</depends>-->
    <!--<depends>com.intellij.modules.xml</depends>-->
    <!--<depends>com.intellij.modules.xdebugger</depends>-->

    <extensions defaultExtensionNs="com.intellij">
        <applicationService
                serviceInterface="state.Config"
                serviceImplementation="state.Config"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="PackageTemplate"
                class="NewPackageTemplateAction"
                text="New PackageTemplate">
            <add-to-group group-id="ProjectViewPopupMenu"
                          anchor="first"/>
        </action>
    </actions>


</idea-plugin>